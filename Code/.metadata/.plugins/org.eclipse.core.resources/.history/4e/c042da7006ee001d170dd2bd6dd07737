#include "Led.h"
#include "Button.h"
#include "Rcc.h"

int main(int argc, char **argv) {
	Rcc_Init();
	Rcc_Enable(RCC_GPIOA);
	Rcc_Enable(RCC_GPIOB);

	LED_Init(GPIO_A, 2);
	LED_Init(GPIO_A, 4);
	LED_Init(GPIO_A, 6);

	BUTTON_Init(GPIO_B, 5);
	BUTTON_Init(GPIO_B, 8);
	uint8 ledState = LED_OFF;

	boolean flage1;
	while(1){
		if (BUTTON_ReadState(GPIO_B, 5) == BUTTON_PRESSED) {
			ledState = !ledState;
			LED_Activate(GPIO_A, 2, ledState);
		}
	}

	return 0;
}




