//	}

	if (GPT_CheckTimeIsElapsed() == GPT_Elapsed) {
		LED_Toggle(VDH_LEDS_PORT, VDH_HAZARD_LIGHTS_LED);
//		timer_10SecFlag = 0;
	}

}



